+        )
+    """
+    db = bot.db
+    db.execute(
+        """
+        CREATE TABLE IF NOT EXISTS dice_highscores (
+            channel TEXT NOT NULL,
+            nick TEXT NOT NULL,
+            score INTEGER NOT NULL,
+            set_at INTEGER NOT NULL,
+            PRIMARY KEY(channel, nick)
+        )
+        """
+    )
