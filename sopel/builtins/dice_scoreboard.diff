+def _get_channel_highscores(bot, channel: str, limit: int = 10) -> List[Tuple[str, int, int]]:
+    """Fetch current (non-expired) highscores for a channel ordered by score desc."""
+    now = int(time.time())
+    _purge_expired(bot, now)
+    return bot.db.execute(
+        """
+        SELECT nick, score, set_at
+        FROM dice_highscores
+        WHERE channel = ? AND set_at >= ?
+        ORDER BY score DESC, set_at ASC
+        LIMIT ?
+        """,
+        (channel, now - WEEK_SECONDS, limit),
+    ).fetchall()
+
+
+def _format_age(seconds: int) -> str:
+    days = seconds // 86400
+    if days > 0:
+        return f"{days}d"
+    hours = seconds // 3600
+    if hours > 0:
+        return f"{hours}h"
+    minutes = seconds // 60
+    if minutes > 0:
+        return f"{minutes}m"
+    return f"{seconds}s"
